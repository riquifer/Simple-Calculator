		var parcelaY = 10;
		var soma = parcelaX + parcelaY;
		document.write(parcelaX + " + " + parcelaY + " = " + soma );
		
		document.write("<br>");
		document.write("<br>");
		
		var minuendoX = 15;
		var subtraendoX = 10;
		var resto = minuendoX - subtraendoX;
		document.write(minuendoX + " - " + subtraendoX + " = " + resto);
		
		document.write("<br>");
		document.write("<br>");
		
		var fatorX = 10;
		var fatorY = 2;
		var produto = fatorX * fatorY;
		document.write(fatorX + " ร " + fatorY + " = " + produto);
		
		document.write("<br>");
		document.write("<br>");
		
		var dividendoX = 10;
		var divisorX = 2;
		var quociente = dividendoX / divisorX;
		document.write(dividendoX + " รท " + divisorX + " = " + quociente);
		
	document.write("</center")

