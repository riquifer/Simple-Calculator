<script>

	document.write("<center>")

		var somax = 15;
		var somay = 10;
		document.write(somax)
		document.write(" + ")
		document.write(somay)
		document.write(" = ")
		document.write( somax + somay )

		document.write("<br>")
		document.write("<br>")

		var subx = 25;
		var suby = 10;
		document.write(subx)
		document.write(" - ")
		document.write(suby)
		document.write(" = ")
		document.write( subx - suby )

		document.write("<br>")
		document.write("<br>")

		var multx = 10;
		var multy = 2;
		document.write(multx)
		document.write(" ร ")
		document.write(multy)
		document.write(" = ")
		document.write( multx * multy )

		document.write("<br>")
		document.write("<br>")

		var divix = 10;
		var diviy = 2;
		document.write(divix)
		document.write(" รท ")
		document.write(diviy)
		document.write(" = ")
		document.write( divix / diviy )

	document.write("</center>")
		
</script>


